@model IEnumerable<Club>

@{
    ViewData["Title"] = "Club Page";
}

<div class="album py-5 bg-body-tertiary">
    <div class="container">
  


        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">


            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="@item.Image" ></img>
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="details" asp-controller="club" 
                                        asp-route-id="@item.ClubId">View</a>

                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a class="btn btn-sm btn-outline-secondary" asp-action="edit" asp-controller="club" 
                                            asp-route-id="@item.ClubId">Edit</a>
                                        <a class="btn btn-sm btn-outline-secondary" asp-action="delete" asp-controller="club" 
                                            asp-route-id="@item.ClubId">Delete</a>
                                    }
                                </div>
                                <small class="text-body-secondary">@item.ClubCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</div>