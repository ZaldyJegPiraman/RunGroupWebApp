@using RunGroupWebApp.Data.Enum;
@using RunGroupWebApp.ViewModels;
@model EditUserDashboardViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<form asp-action="EditUserProfile" asp-controller="Dashboard" method="post" enctype="multipart/form-data">

    <input type="hidden" id="Id" name="Id" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Pace" class="form-label">Pace</label>
        <input asp-for="Pace" class="form-control" id="Pace" placeholder="Pace">
        <span asp-validation-for="Pace" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Mileage" class="form-label">Mileage</label>
        <input asp-for="Mileage" class="form-control" id="Mileage" placeholder="Mileage">
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="City" class="form-label">City</label>
        <input asp-for="City" class="form-control" id="City" placeholder="City">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="State" class="form-label">State</label>
        <input asp-for="State" class="form-control" id="State" placeholder="State">
        <span asp-validation-for="State" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" type="file" class="form-control" id="Image" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>